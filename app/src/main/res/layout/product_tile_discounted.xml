<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.example.swiftly.exercise.android.specials.displaymodel.DiscountedProductTileDisplayModel" />

        <import type="com.example.swiftly.exercise.android.common.displaymodel.AspectRatioParams" />

        <variable
            name="displayModel"
            type="DiscountedProductTileDisplayModel" />
    </data>

    <com.example.swiftly.exercise.android.common.view.FixedWidthAspectRatioFrameLayout
        aspectRatio="@{displayModel.aspectRatio}"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:minHeight="120sp"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        tools:layout_width="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/card_background"
            android:elevation="16dp"
            android:paddingStart="12dp"
            android:paddingTop="12dp"
            android:paddingEnd="12dp"
            android:paddingBottom="12dp">

            <ImageView
                android:id="@+id/image"
                imageModel="@{displayModel.imageModel}"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="8dp"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toTopOf="@id/title"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toStartOf="@id/barrier_prices"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@tools:sample/avatars" />

            <TextView
                android:id="@+id/price_original"
                strikethrough="@{true}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:ellipsize="end"
                android:gravity="end"
                android:maxLines="1"
                android:text="@{displayModel.originalFormattedPrice}"
                android:textAppearance="@style/TextAppearance.Swiftly.Price"
                app:layout_constraintBottom_toTopOf="@+id/price_discounted"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
                tools:text="$888.88" />

            <TextView
                android:id="@+id/price_discounted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"
                android:ellipsize="end"
                android:gravity="end"
                android:maxLines="1"
                android:text="@{displayModel.formattedPrice}"
                android:textAppearance="@style/TextAppearance.Swiftly.Price.Discounted"
                app:layout_constraintBottom_toTopOf="@+id/title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintTop_toBottomOf="@+id/price_original"
                tools:text="$888.88" />

            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="2"
                android:minLines="2"
                android:text="@{displayModel.title}"
                android:textAppearance="?textAppearanceBody1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintWidth_max="240dp"
                tools:text="@tools:sample/lorem[16]" />

            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/barrier_prices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:barrierDirection="left"
                app:constraint_referenced_ids="price_discounted,price_original" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.example.swiftly.exercise.android.common.view.FixedWidthAspectRatioFrameLayout>
</layout>